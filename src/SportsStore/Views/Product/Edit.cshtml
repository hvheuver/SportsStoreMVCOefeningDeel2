@model SportsStore.Models.ViewModels.ProductEditViewModel

<h2>@ViewData["Title"]</h2>
@{
    ViewData["Title"] = (Model.ProductId == 0) ? "Create Product" : "Edit Product";
    var action = Model.ProductId == 0 ? "Create" : "Edit";
}

<h2>@ViewData["Title"]</h2>
<hr />


<form asp-action="@action" method="post">

    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="InStock"></label>
        <input asp-for="InStock" />
    </div>

    <div class="form-group">
        <label asp-for="Availability"></label>
        <select asp-for="Availability" asp-items="@(ViewData["Availabilities"] as SelectList)" class="form-control">
            <option value="">-- select availability --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@(ViewData["Categories"] as SelectList)" class="form-control">
            <option value="">-- select category --</option>
        </select>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>

</form>

<p></p>


